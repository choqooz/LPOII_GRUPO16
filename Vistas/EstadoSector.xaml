<UserControl x:Class="Vistas.EstadoSector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        Height="300" Width="300">
    <UserControl.Resources>
        <XmlDataProvider Source="Tiempos.xml" XPath="/Tiempos/Tiempos" x:Key="Tiempos" />
        <svc:ConversorDeEstados x:Key="convertidor" />
    </UserControl.Resources>

    <Grid>
        <TextBlock Text="Estado de Sectores" HorizontalAlignment="Center" FontSize="20"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Duración min" HorizontalAlignment="Center" Margin="0,0,0,10" />
            <ComboBox SelectedValue="{Binding Tiempo}" ItemsSource="{Binding Tiempos}" Name="cmbTiempos" />
            <Rectangle Width="100" Height="97" HorizontalAlignment="Center" Fill="{Binding ElementName=cmbTiempos, Path=SelectedValue, Converter={StaticResource convertidor}}" />
        </StackPanel>
    </Grid>
</UserControl>
