<Window x:Class="Vistas.TiposVehiculoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tipos de Vehículo" Height="400" Width="600">
    <Grid>
        <!-- DataGrid para mostrar los datos de los Tipos de Vehículo -->
        <DataGrid Name="dataGridTiposVehiculo" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,10,10,50"/>

        <!-- Botón para cerrar la ventana -->
        <Button Content="Cerrar" Height="30" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnCerrar_Click" Margin="236,0,242,12" />

    </Grid>
</Window>
